<Window x:Class="WpfExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="684">
    <StackPanel Orientation="Horizontal" Margin="0,0,3,0">
        <Button Content="Create Report" Width="150" Height="70" Margin="10" Click="Button_Click" />
        <Button Content="Open Report" Width="150" Height="70" Margin="10" Click="Button_Click_1"/>
        <Button Content="Print Report" Width="150" Height="70" Margin="10" Click="Button_Click_2"/>
        <Button Content="Preview Report" Width="150" Height="70" Margin="10" Click="Button_Click_3"/>
    </StackPanel>
</Window>
